

<div class="card">
  <div class="card-header">
    <%= @gig.industry%>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @gig.title %></h5>
    <p class="card-text"><%= @gig.description%></p>
    <a href="#" class="btn btn-primary">View <%= @gig.user.first_name%>'s Profile</a>
  </div>
</div>
<% if current_user.present? && current_user.id == @gig.user.id %>
<%= link_to 'Edit', edit_gig_path(@gig) %> |
<% end %>
