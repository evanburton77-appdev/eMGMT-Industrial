<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Agent</th>
      <th>Content</th>
      <th>Subject</th>
      <th>Read receipt user</th>
      <th>Read receipt manager</th>
      <th>Reaction user</th>
      <th>Reaction manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user_id %></td>
        <td><%= message.agent_id %></td>
        <td><%= message.content %></td>
        <td><%= message.subject %></td>
        <td><%= message.read_receipt_user %></td>
        <td><%= message.read_receipt_manager %></td>
        <td><%= message.reaction_user %></td>
        <td><%= message.reaction_manager %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

