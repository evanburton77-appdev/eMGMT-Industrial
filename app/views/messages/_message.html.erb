<% if user_signed_in? %>
<li id="message-card-user" class="d-flex justify-content-between mb-4">
            <img src="<%= @message.user.photo %>" alt="avatar"
              class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
            <div class="card mask-custom">
              <div class="card-header d-flex justify-content-between p-3"
                style="border-bottom: 1px solid rgba(255,255,255,.3);">
                <p class="fw-bold mb-0"><%= @message.user.first_name %></p>
                <p class="text-light small mb-0"><i class="far fa-clock"></i> <%= @message.updated_at %></p>
              </div>
              <div class="card-body">
                <p class="mb-0">
                <%= @message.content %>
                </p>
              </div>
            </div>
          </li>
<% elsif agent_signed_in? %>
<li id="message-card-user" class="d-flex justify-content-between mb-4">
            <img src="<%= @message.agent.photo %>" alt="avatar"
              class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
            <div class="card mask-custom">
              <div class="card-header d-flex justify-content-between p-3"
                style="border-bottom: 1px solid rgba(255,255,255,.3);">
                <p class="fw-bold mb-0"><%= @message.agent.first_name %></p>
                <p class="text-light small mb-0"><i class="far fa-clock"></i> <%= @message.updated_at %></p>
              </div>
              <div class="card-body">
                <p class="mb-0">
                <%= @message.content %>
                </p>
              </div>
            </div>
          </li>
<% end %>
